# AdGuard Home MCP Server Configuration
# Copy this file to .env and fill in your values

# URL of your AdGuard Home instance (required)
ADGUARD_URL=http://localhost:3000

# AdGuard Home credentials (required)
ADGUARD_USERNAME=admin
ADGUARD_PASSWORD=your-password-here

# Access tier: "read-only" or "full" (default: full)
# ADGUARD_ACCESS_TIER=full

# Comma-separated list of tool categories to enable (default: all)
# ADGUARD_CATEGORIES=filtering,dns,clients

# Require confirmation for destructive operations (default: false)
# ADGUARD_CONFIRM_DESTRUCTIVE=true

# Enable debug logging (default: false)
# DEBUG=true
